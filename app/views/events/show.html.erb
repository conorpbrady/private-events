<h1><%= @event.description %></h1>
<h3><%= @event.event_date %></h3>

<span>Created by: <%= @event.creator.name %></span>

<% if @event.in_attendence?(current_user) %>
<%= link_to "No longer attending", '#' %>
<% else %>
<%= link_to "Attend Event", '#' %>
<% end %>
<h3>Attendees</h3>
  <ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.name %></li>
    <% end %>
  </ul>
